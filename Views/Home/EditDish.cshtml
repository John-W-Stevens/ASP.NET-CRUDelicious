@{
    ViewData["Title"] = "Edit Dish";
}

@model Dish
 

<div class="row">
    <div class="col-12 text-center">
        <h1>Edit @ViewBag.OneSingleDish.Name</h1>
    </div>
</div>

<form asp-action="Update" class="form-horizontal row" method="post" asp-route-dishId="@Model.DishId">
    <div class="col-12 col-md-5">
        <div class="from-group">
            <label asp-for="Chef"></label>&nbsp<span class="error" asp-validation-for="Chef"></span>
            <input class="form-control" asp-for="Chef"  />
        </div>
        <div class="from-group">
            <label asp-for="Name"></label>&nbsp<span class="error" asp-validation-for="Name"></span>
            <input class="form-control" asp-for="Name"/>
        </div>
        <div class="from-group">
            <label asp-for="Calories"></label>&nbsp<span class="error" asp-validation-for="Calories"></span>
            <input class="form-control" asp-for="Calories" />
        </div>
    </div>
    <div class="col-12 col-md-3">
        <div class="form-group">
            <label asp-for="Tastiness"></label>&nbsp<span class="error" asp-validation-for="Tastiness"></span>
            <input asp-for="Tastiness" class="form-control" />
        </div>
    </div>
    <div class="col-12 col-md-4">
        <div class="form-group">
            <label asp-for="Description"></label>&nbsp<span class="error" asp-validation-for="Description"></span>
            <textarea asp-for="Description" class="form-control" id="description" ></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-primary">Edit Dish</button>
        </div>
    </div>
</form>

